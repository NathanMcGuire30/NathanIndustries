package com.nathan.nathanmod.world;

import java.util.Random;
import net.minecraft.block.Block;
import net.minecraft.block.BlockSapling;
import net.minecraft.block.material.Material;
import net.minecraft.init.Blocks;
import net.minecraft.world.World;
import net.minecraft.world.gen.feature.WorldGenAbstractTree;
import net.minecraftforge.common.util.ForgeDirection;

public abstract class MakeBigTree extends WorldGenAbstractTree {
    protected final int minTreeHeight; //Minimum height
    protected final int meta; //wood metadata value
    protected int field_150538_d; //???????
    private static final String __OBFID = "CL_00000423"; //??????
    private final Block trunkBlock; // Block to use for trunk
	private final Block leavesBlock; // Block for leaves

    public MakeBigTree(boolean p_i45458_1_, int minHeight, Block trunk, Block leaves, int meta) {
        super(p_i45458_1_);
        this.minTreeHeight = minHeight;
        this.meta = meta;
        this.trunkBlock = trunk;
        this.leavesBlock = leaves;
    }

    protected int randomize(Random random)
    {
        int i = random.nextInt(3) + this.minTreeHeight;

        return i;
    }

    private boolean thing(World world, Random random, int x, int y, int z, int p_150536_6_)
    {
        boolean flag = true;

        if (y >= 1 && y + p_150536_6_ + 1 <= 256)
        {
            for (int i1 = y; i1 <= y + 1 + p_150536_6_; ++i1)
            {
                byte b0 = 2;

                if (i1 == y)
                {
                    b0 = 1;
                }

                if (i1 >= y + 1 + p_150536_6_ - 2)
                {
                    b0 = 2;
                }

                for (int j1 = x - b0; j1 <= x + b0 && flag; ++j1)
                {
                    for (int k1 = z - b0; k1 <= z + b0 && flag; ++k1)
                    {
                        if (i1 >= 0 && i1 < 256)
                        {
                            Block block = world.getBlock(j1, i1, k1);

                            if (!this.isReplaceable(world, j1, i1, k1))
                            {
                                flag = false;
                            }
                        }
                        else
                        {
                            flag = false;
                        }
                    }
                }
            }

            return flag;
        }
        else
        {
            return false;
        }
    }

    public boolean generate(World world, Random random, int x, int y, int z) {
        Block block = world.getBlock(x, y - 1, z);

        boolean isSoil = block.canSustainPlant(world, x, y - 1, z, ForgeDirection.UP, (BlockSapling)Blocks.sapling);
        if (isSoil && y >= 2)
        {
            onPlantGrow(world, x,     y - 1, z,     x, y, z);
            onPlantGrow(world, x + 1, y - 1, z,     x, y, z);
            onPlantGrow(world, x,     y - 1, z + 1, x, y, z);
            onPlantGrow(world, x + 1, y - 1, z + 1, x, y, z);
            return true;
        }
        else
        {
            return false;
        }
    }

    protected boolean func_150537_a(World world, Random random, int x, int y, int z, int p_150537_6_)
    {
        return this.thing(world, random, x, y, z, p_150537_6_) && this.generate(world, random, x, y, z);
    }

    protected void func_150535_a(World world, int x, int y, int z, int p_150535_5_, Random random)
    {
        int i1 = p_150535_5_ * p_150535_5_;

        for (int j1 = x - p_150535_5_; j1 <= x + p_150535_5_ + 1; ++j1)
        {
            int k1 = j1 - x;

            for (int l1 = z - p_150535_5_; l1 <= z + p_150535_5_ + 1; ++l1)
            {
                int i2 = l1 - z;
                int j2 = k1 - 1;
                int k2 = i2 - 1;

                if (k1 * k1 + i2 * i2 <= i1 || j2 * j2 + k2 * k2 <= i1 || k1 * k1 + k2 * k2 <= i1 || j2 * j2 + i2 * i2 <= i1)
                {
                    Block block = world.getBlock(j1, y, l1);

                    if (block.isAir(world, j1, y, l1) || block.isLeaves(world, j1, y, l1))
                    {
                        this.setBlockAndNotifyAdequately(world, j1, y, l1, Blocks.leaves, this.meta);
                    }
                }
            }
        }
    }

    protected void func_150534_b(World world, int x, int y, int z, int p_150534_5_, Random random)
    {
        int i1 = p_150534_5_ * p_150534_5_;

        for (int j1 = x - p_150534_5_; j1 <= x + p_150534_5_; ++j1)
        {
            int k1 = j1 - x;

            for (int l1 = z - p_150534_5_; l1 <= z + p_150534_5_; ++l1)
            {
                int i2 = l1 - z;

                if (k1 * k1 + i2 * i2 <= i1)
                {
                    Block block = world.getBlock(j1, y, l1);

                    if (block.isAir(world, j1, y, l1) || block.isLeaves(world, j1, y, l1))
                    {
                        this.setBlockAndNotifyAdequately(world, j1, y, l1, Blocks.leaves, this.meta);
                    }
                }
            }
        }
    }

    //Just a helper macro
    private void onPlantGrow(World world, int x, int y, int z, int sourceX, int sourceY, int sourceZ)
    {
        world.getBlock(x, y, z).onPlantGrow(world, x, y, z, sourceX, sourceY, sourceZ);
    }
}